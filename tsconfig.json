{
  "display": "Node 20",
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",

    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "paths": { "#*": ["src/*"] },

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "rest", "node_modules"]
}
